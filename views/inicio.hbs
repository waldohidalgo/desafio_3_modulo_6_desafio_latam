<div class="row w-95 m-auto pt-3 px-5">
  <!-- Crear -->
  <div class="col-12 col-md-3 contaienr p-2">
    <h3>Crear un archivo</h3>
    <form action="/crear" id="formulario_crear">
      <div class="form-group">
        <label for="crear_archivo">Nombre del archivo</label>
        <input
          name="archivo"
          class="form-control"
          id="crear_archivo"
          required
        />
      </div>
      <div class="form-group">
        <label for="crear_contenido">Contenido</label>
        <textarea
          name="contenido"
          class="form-control"
          id="crear_contenido"
          cols="30"
          rows="10"
          required
        ></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Crear archivo</button>
    </form>
  </div>
  <!-- Leer -->
  <div class="col-12 col-md-3 contaienr p-2">
    <h3>Leer un archivo</h3>
    <form action="/leer" id="formulario_leer">
      <div class="form-group">
        <label for="leer_archivo">Nombre del archivo</label>
        <select
          name="archivo"
          id="leer_archivo"
          class="form-select"
          aria-label="form-select"
          required
        >
          <option value="" selected>Selecciona un archivo</option>
          {{#each archivos}}
          <option value="{{ this }}">{{ this }}</option>
          {{/each}}
        </select>
      </div>

      <button type="submit" class="btn btn-info">Consultar archivo</button>
    </form>
  </div>
  <!-- Renombrar -->
  <div class="col-12 col-md-3 contaienr p-2">
    <h3>Renombrar un archivo</h3>
    <form action="/renombrar" id="formulario_renombrar">
      <div class="form-group">
        <label for="renombrar_archivo">Nombre del archivo</label>
        <select
          id="renombrar_archivo"
          class="form-select"
          aria-label="form-select"
          name="nombre_seleccionado"
          required
        >
          <option selected value="">Selecciona un archivo</option>
          {{#each archivos}}
          <option value="{{ this }}">{{ this }}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        Nombre del archivo
        <input
          name="nombre_nuevo"
          class="form-control"
          id="nuevo_nombre_archivo"
        />
      </div>

      <button type="submit" class="btn btn-warning">Renombrar archivo</button>
    </form>
  </div>
  <!-- Eliminar -->
  <div class="col-12 col-md-3 contaienr p-2">
    <h3>Eliminar un archivo</h3>
    <form action="/eliminar" id="formulario_eliminar">
      <div class="form-group">
        <label for="eliminar_archivo">Nombre del archivo</label>
        <select
          id="eliminar_archivo"
          class="form-select"
          aria-label="form-select"
          name="nombre_archivo"
          required
        >
          <option selected value="">Selecciona un archivo</option>
          {{#each archivos}}
          <option value="{{ this }}">{{ this }}</option>
          {{/each}}
        </select>
      </div>

      <button type="submit" class="btn btn-danger">Eliminar archivo</button>
    </form>
  </div>
</div>
